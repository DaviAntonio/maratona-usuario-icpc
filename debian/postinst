#!/bin/bash
set -e
# see: dh_installdeb(1)
#      https://www.debian.org/doc/manuals/maint-guide/dother.en.html#maintscripts
# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
	configure)
		if id --user icpc >/dev/null 2>/dev/null; then
			# if user exists, check if it can sudo
			if id --groups --name icpc | grep --quiet sudo; then
				echo "User icpc has sudo! Trying to remove it"
				if gpasswd -d icpc sudo; then
					echo "User icpc lost its sudo rights"
				else
					echo "Could not remove user icpc sudo rights!"
					exit 2
				fi
			fi

			pass=$(echo -n 'icpcd' | makepasswd --clearfrom - --crypt-md5 | awk '{print $NF}')
			if usermod --home /home/icpc --password "${pass}" --shell /bin/bash --gid users icpc; then
				echo "User icpc already existed"
				echo "User icpc has had its password changed in order to encourage a home cleaning"
			else
				echo "Failed to update user icpc's password"
				exit 3
			fi
		fi

	    # Run home cleaning script on boot
	    # The .clean-home file on the icpc's home will force a home cleaning
	    if mkdir -p /home/icpc/; then
		    echo "Successfully created /home/icpc/"

		    if touch /home/icpc/.clean-home; then
			    echo "Successfully requested a clean home on reboot"
		    else
			    echo "Failed to request a clean home on reboot"
			    exit 5
		    fi
	    else
		    echo "Failed to create /home/icpc"
		    exit 4
	    fi
	    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
	    ;;

    *)
	    echo "postinst called with unknown argument \`$1'" >&2
	    exit 1
	    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
