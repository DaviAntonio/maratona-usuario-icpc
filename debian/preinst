#!/bin/sh
set -e
# see: dh_installdeb(1)
#      https://www.debian.org/doc/manuals/maint-guide/dother.en.html#maintscripts
# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
	install|upgrade)
		if systemctl stop systemd-oomd.service; then
			echo "Successfully stopped systemd-oomd"

			if systemctl mask --now systemd-oomd.service; then
				echo "Successfully masked systemd-oomd"
			else
				echo "Failed to mask systemd-oomd"
				exit 2
			fi
		else
			echo "Failed to find or stop systemd-oomd"
		fi
		;;

	abort-upgrade)
		;;

	*)
		echo "preinst called with unknown argument \`$1'" >&2
		exit 1
		;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
