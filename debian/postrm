#!/bin/sh
set -e
# see: dh_installdeb(1)
#      https://www.debian.org/doc/manuals/maint-guide/dother.en.html#maintscripts
# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
	purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
		if systemctl unmask systemd-oomd.service; then
			echo "Successfully unmasked systemd-oomd"

			if systemctl revert systemd-oomd.service; then
				echo "Successfully reverted systemd-oomd to vendor defaults"
			else
				echo "Failed to revert systemd-oomd to vendor defaults"
			fi
		else
			echo "Failed to unmask systemd-oomd"
		fi
		;;

	*)
		echo "postrm called with unknown argument \`$1'" >&2
		exit 1
		;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
